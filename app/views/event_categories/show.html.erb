<div id="content_detail" class="ui-corner-all">
<h1 class="title"><%= t('page.showing', :model => t('activerecord.models.event_category')) -%></h1>
<div id="content_list">
<p id="notice"><%= notice %></p>

<p>
  <strong><%= t('activerecord.attributes.event_category.name') -%>:</strong>
  <%= @event_category.name -%>
</p>

<p>
  <strong><%= t('activerecord.attributes.event_category.display_name') -%>:</strong>
  <%= @event_category.display_name.localize -%>
</p>

<p>
  <% if @event_category.checkin_ng == false %>
    <%= t('activerecord.attributes.event_category.checkin_ng_yes') -%>
  <% else %>
    <%= t('activerecord.attributes.event_category.checkin_ng_no') -%>
  <% end %>
  <% if @event_category.move_checkin_date == 2 %>
    <%= t('activerecord.attributes.event_category.checkin_ng_pre') -%>
  <% else %>
    <%= t('activerecord.attributes.event_category.checkin_ng_post') -%>
  <% end %>
</p>

<p>
  <strong><%= t('activerecord.attributes.event_category.note') -%>:</strong>
  <%= @event_category.note -%>
</p>

</div>
</div>

<div id="submenu" class="ui-corner-all">
  <ul>
    <li><%= link_to t('page.edit'), edit_event_category_path(@event_category) -%></li>
    <li><%= back_to_index(flash[:page_info]) -%></li>
  </ul>
</div>
