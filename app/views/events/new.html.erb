<div class="row">
  <div class="col-md-9">
    <h1 class="title"><%= t('page.new', model: t('activerecord.models.event')) -%></h1>
    <%= render 'form' %>
    <%= render 'all_day' %>
  </div>

  <div class="col">
    <div class="card card-body">
      <ul>
        <%- if @library -%>
          <li><%= link_to t('page.back'), events_path(library_id: @library.name) -%></li>
        <%- else -%>
          <li><%= link_to t('page.back'), events_path -%></li>
        <%- end -%>
      </ul>
    </div>
  </div>
</div>
